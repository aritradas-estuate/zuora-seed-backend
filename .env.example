# Application
APP_NAME=zuora-seed-agent

# Bedrock Model Configuration
GEN_MODEL_ID=us.meta.llama3-3-70b-instruct-v1:0

# Zuora API Configuration
ZUORA_CLIENT_ID=your_client_id
ZUORA_CLIENT_SECRET=your_client_secret
ZUORA_ENV=sandbox

# OpenTelemetry Observability Configuration
OTEL_SERVICE_NAME=zuora-seed-agent
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=production,service.version=0.1.0
OTEL_TRACES_SAMPLER=parentbased_traceidratio
OTEL_TRACES_SAMPLER_ARG=1.0  # 100% sampling (use 0.1 for 10% in production)
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_PYTHON_LOG_CORRELATION=true
OTEL_ENABLED=true

# OTLP Exporter Endpoint (leave empty for AWS CloudWatch)
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_METRIC_EXPORT_INTERVAL=60000

# Performance Configuration
ZUORA_API_CACHE_ENABLED=true
ZUORA_API_CACHE_TTL_SECONDS=300
ZUORA_API_RETRY_ATTEMPTS=3
ZUORA_API_RETRY_BACKOFF_FACTOR=2.0
ZUORA_API_CONNECTION_POOL_SIZE=10
ZUORA_API_REQUEST_TIMEOUT=60
ZUORA_OAUTH_TIMEOUT=30

# Conversation History Management
# Limits conversation history to N turn buckets for performance optimization
# Lower values = less context but faster responses and lower token costs
# Recommended: 3 (provides ~70-90% token reduction for long conversations)
MAX_CONVERSATION_TURNS=3
